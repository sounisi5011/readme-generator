{
  "name": "@sounisi5011/readme-generator",
  "version": "0.0.5",
  "private": true,
  "description": "CLI tool to generate README.md by using Nunjucks template file",
  "homepage": "https://github.com/sounisi5011/readme-generator",
  "bugs": {
    "url": "https://github.com/sounisi5011/readme-generator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sounisi5011/readme-generator.git"
  },
  "license": "MIT",
  "author": "sounisi5011",
  "bin": "dist/index.js",
  "directories": {
    "lib": "src",
    "test": "tests"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "run-s tsc",
    "build:readme": "ts-node ./src/index.ts --template ./.template/README.njk",
    "clean": "run-p clean:*",
    "clean:build": "rimraf ./dist/",
    "clean:test": "rimraf './tests/**/*.test-result/'",
    "fmt": "run-p fmt-xs fmt-pkg",
    "fmt-pkg": "run-s fmt-pkg:prettier fmt-pkg:sort",
    "fmt-pkg:prettier": "prettier-package-json --write ./package.json",
    "fmt-pkg:sort": "sort-package-json '**/package.json' '!**/node_modules'",
    "fmt-xs": "run-s fmt-xs:eslint",
    "fmt-xs:eslint": "run-s 'lint:eslint -- --fix'",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint ./",
    "lint:tsc-src": "tsc --noEmit",
    "lint:tsc-test": "tsc -p ./tests/ --noEmit",
    "lint:tsc-test-helpers": "tsc -p ./tests/helpers/ --noEmit",
    "prepare": "patch-package",
    "release": "run-s release:validation release:build release:publish",
    "release:build": "run-s clean:build build",
    "release:publish": "run-s release:publish:git",
    "release:publish:git": "package-version-git-tag --verbose --push",
    "release:validation": "run-p release:validation:* test",
    "release:validation:git-branch": "git-branch-is master",
    "release:validation:git-work-dir": "is-git-status-clean",
    "test": "run-s test:lint test:unit-test test:readme",
    "test:lint": "run-s test:peer-deps lint",
    "test:peer-deps": "check-peer-deps",
    "test:readme": "run-s 'build:readme -- --test'",
    "test:unit-test": "jest",
    "tsc": "tsc"
  },
  "dependencies": {
    "@npmcli/git": "^2.0.2",
    "bent": "^7.3.2",
    "cac": "^6.5.10",
    "chalk": "^4.1.0",
    "diff": "^4.0.2",
    "execa": "^4.0.1",
    "get-roots": "^1.2.3",
    "gray-matter": "^4.0.2",
    "hosted-git-info": "^3.0.4",
    "npm-package-arg": "^8.0.1",
    "npm-path": "^2.0.4",
    "nunjucks": "^3.2.1"
  },
  "devDependencies": {
    "@dprint/core": "0.9.0",
    "@types/bent": "7.3.0",
    "@types/diff": "4.0.2",
    "@types/hosted-git-info": "3.0.0",
    "@types/jest": "26.0.10",
    "@types/node": "*",
    "@types/npm-package-arg": "6.1.0",
    "@types/nunjucks": "3.1.3",
    "@types/promise-retry": "1.1.3",
    "@types/rimraf": "3.0.0",
    "@types/semver": "7.3.3",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "check-peer-deps": "1.1.3",
    "dprint-plugin-typescript": "0.20.4",
    "escape-string-regexp": "4.0.0",
    "eslint": "7.7.0",
    "eslint-config-standard": "14.1.1",
    "eslint-config-standard-with-typescript": "18.0.2",
    "eslint-plugin-dprint": "0.3.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "expect": "26.4.2",
    "git-branch-is": "4.0.0",
    "husky": "4.2.5",
    "is-git-status-clean": "1.0.0",
    "jest": "26.4.2",
    "jest-extended": "0.11.5",
    "lint-staged": "10.2.13",
    "make-dir": "3.1.0",
    "npm-run-all": "4.1.5",
    "omit.js": "2.0.2",
    "package-version-git-tag": "3.0.0",
    "patch-package": "6.2.2",
    "prettier": "2.1.1",
    "prettier-package-json": "2.1.3",
    "rimraf": "3.0.2",
    "semver": "7.3.2",
    "sort-package-json": "1.44.0",
    "strip-ansi": "6.0.0",
    "ts-jest": "26.3.0",
    "ts-node": "9.0.0",
    "type-fest": "0.16.0",
    "typescript": "4.0.2",
    "typescript-cached-transpile": "0.0.6"
  },
  "engines": {
    "node": "^10.14.2 || 12.x || 14.x"
  }
}
